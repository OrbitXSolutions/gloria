# Add these to your .env.local file

# Logging Configuration
NEXT_PUBLIC_ENABLE_LOGGING=true
ENABLE_LOGGING=true
LOG_LEVEL=info
LOG_TO_DATABASE=true
LOG_RETENTION_DAYS=30

# Optional: External logging service webhook
# LOGGING_WEBHOOK_URL=https://your-logging-service.com/webhook

# Optional: Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Optional: Sample rate for high traffic (0.1 = 10% of requests)
# LOGGING_SAMPLE_RATE=1.0
